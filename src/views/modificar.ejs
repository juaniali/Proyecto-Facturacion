          <div class="field">
            <label for="precio">Precio</label>
            <input class="input" name="precio" type="number" placeholder="Precio Producto" id="precio" value="<%= registro.precio %>">
          </div>
          <div class="field">
            <label for="imagen">Cargar Imagen</label>
            <input class="input" name="imagen" type="text" placeholder="imagen" value="<%= registro.imagen %>">
          </div>
        
          <div class="descripcion">
            <label for="descripcion">Descripcion</label>
            <input class="input" name="descripcion" type="text" placeholder="descripcion" value="<%= registro.descrip %>">
          </div>
          <div class="field form-button">
            <button class="formateo-boton botonVerde" type="submit">Actualizar</button>
            
          </div>
          <input type="hidden" name="idActualizar" value="<%= registro.id_producto %>">
        </form>
        
        
      
  
      
  
